{
  "name": "project-ts",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.js",
  "type": "commonjs",
  "scripts": {
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "dev": "cross-env NODE_ENV=development nodemon --watch src -e ts,tsx --exec ts-node -r tsconfig-paths/register ./src/index.ts",
    "build": "rm -rf dist/* && tsc",
    "test": "cross-env NODE_ENV=test jest --coverage --detectOpenHandles --forceExit"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^28.1.6",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/koa": "^2.13.4",
    "@types/koa__multer": "^2.0.4",
    "@types/koa-bodyparser": "^4.3.7",
    "@types/koa-convert": "^1.2.4",
    "@types/koa-router": "^7.4.4",
    "@types/koa-static": "^4.0.2",
    "@types/koa2-cors": "^2.0.2",
    "@types/lodash": "^4.14.182",
    "@types/mkdirp": "^1.0.2",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^17.0.35",
    "@types/node-schedule": "^2.1.0",
    "@types/shortid": "0.0.29",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "prettier": "^2.6.2",
    "supertest": "^6.2.4",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.8.0",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.7.2"
  },
  "dependencies": {
    "@koa/multer": "^3.0.0",
    "@types/mime-types": "^2.1.1",
    "googleapis": "^109.0.0",
    "got": "^11.8.3",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "koa-convert": "^2.0.0",
    "koa-helmet": "^6.1.0",
    "koa-router": "^10.1.1",
    "koa-static": "^5.0.0",
    "koa2-cors": "^2.0.6",
    "lodash": "^4.17.21",
    "log4js": "^6.5.2",
    "mime-types": "^2.1.35",
    "mkdirp": "^1.0.4",
    "module-alias": "^2.2.2",
    "moment-timezone": "^0.5.34",
    "mongoose": "^6.3.4",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^3.2.10",
    "node-schedule": "^2.1.0",
    "qs": "^6.11.0",
    "redis": "^4.3.0",
    "shortid": "^2.2.16",
    "uuid": "^8.3.2"
  },
  "_moduleAliases": {
    "~": "./dist",
    "@utils": "./dist/utils",
    "@logger": "./dist/logger",
    "@config": "./dist/config",
    "@models": "./dist/models",
    "@services": "./dist/services",
    "@middleware": "./dist/middleware",
    "@type": "./dist/type"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "ts",
      "tsx"
    ],
    "moduleNameMapper": {
      "^~/(.*)$": "<rootDir>/src/$1",
      "^@utils/(.*)$": "<rootDir>/src/utils/$1",
      "^@config": "<rootDir>/src/config",
      "^@models": "<rootDir>/src/models",
      "^@services/(.*)$": "<rootDir>/src/services/$1",
      "^@middleware/(.*)$": "<rootDir>/src/middleware/$1",
      "^@type/(.*)$": "<rootDir>/src/type/$1"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{ts,js}",
      "!**/node_modules/**",
      "!**/dist/**",
      "!**/coverage/**"
    ],
    "transform": {
      "\\.ts$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "coverageDirectory": "coverage",
    "roots": [
      "<rootDir>/test"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/",
      "/coverage/"
    ]
  }
}
